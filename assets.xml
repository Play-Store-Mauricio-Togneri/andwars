<?xml version="1.0"?>
<project default="createAssetIndex" >

    <target name="createAssetIndex" >

        <fileset
            id="assets.fileset"
            dir="assets/"
            excludes="asset.index"
            includes="**" />

        <pathconvert
            pathsep="${line.separator}"
            property="assets"
            refid="assets.fileset" >

            <mapper>

                <globmapper
                    from="${basedir}/assets/*"
                    handledirsep="yes"
                    to="*" />
                
            </mapper>
            
        </pathconvert>

        <echo file="assets/asset.index" >${assets}</echo>
        
    </target>

</project>