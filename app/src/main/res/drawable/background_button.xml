<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">

        <shape>

            <solid
                android:color="#81CFEB"/>

            <stroke
                android:width="1dp"
                android:color="#B0B0B0"/>

        </shape>

    </item>

    <item>

        <shape>

            <solid
                android:color="#F0F0F0"/>

            <stroke
                android:width="0.5dp"
                android:color="#B0B0B0"/>

        </shape>

    </item>

</selector>