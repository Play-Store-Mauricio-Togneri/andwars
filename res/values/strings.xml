    <string name="dialog_help_main_menu">Main Menu</string>
    <string name="dialog_help_main_menu_text_1">In this screen you can select the map for the game.</string>
    <string name="dialog_help_main_menu_text_2">Use</string>
    <string name="dialog_help_main_menu_text_3">to change the map.</string>
